<!--pages/trade/trade.wxml-->
<view class="outer">
    <detailed_info lessonName="{{lessonInfo.lessonName}}" lessonId="{{lessonInfo.lessonNumber}}" teacherName="{{lessonInfo.teacherName}}" semester="{{lessonInfo.semester}}" credit="{{lessonInfo.credit}}"></detailed_info>
    <tab_1 class="tab"  active_item="{{1}}" lessonId="{{lessonId}}"></tab_1>
    <three_types></three_types>
    <view class="display">
        <commodity wx:for="{{commodity_list}}" single_commodity="{{item}}"></commodity>
    </view>
    <button><image src="{{collected ? 'https://z3.ax1x.com/2021/11/27/om5njs.png':'https://z3.ax1x.com/2021/11/27/om5Kun.png'}}" class="star"></image><text class="collect">{{collected ? '取消收藏' : '收藏'}}</text></button>
</view>

