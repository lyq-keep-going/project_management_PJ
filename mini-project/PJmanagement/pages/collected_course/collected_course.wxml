<view class="cu-bar bg-white solid-bottom">
    <view class="action">
        <text class="cuIcon-titles text-orange"></text>收藏课程
    </view>
</view>
<view class="cu-card case" :class="isCard?'no-card':''" id="card" wx:for-items="{{courses}}" wx:for-item="course">
			<view class="cu-item shadow">
				<view class="image">
					<image src="{{course.img}}"mode="widthFix"></image>
				</view>
				<view class="cu-list menu-avatar">
					<view class="description">{{course.title}}</view>
				</view>
			</view>
</view>
