/* pages/home/home.wxss */
page {
    min-height: 100%;
}

.container {
    min-height: 100%;
    overflow-x: hidden;
    padding: 80rpx 0;
}

.userinfo {
    display: flex;
    width: 100%;
    margin-bottom: 24rpx;
    box-sizing: border-box;
    position: relative;
    flex-direction: column;
}

.head-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 60rpx;
    padding: 30rpx 0;
}

.head-wrap .login-avatar {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.head-wrap .login-avatar .avatar {
    width: 128rpx;
    height: 128rpx;
    position: relative;
    margin-right: 30rpx;
}

.head-wrap .login-avatar .avatar .avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 90rpx;
}

.head-wrap .login-avatar .name {
    font-size: 42rpx;
    font-weight: bold;
}

.menu {
    display: flex;
    width: 100%;
    margin-bottom: 24rpx;
    box-sizing: border-box;
    position: relative;
    flex-direction: column;
}

.li-wrap {
    margin: 30rpx 80rpx;
    font-size: 35rpx;
}

.li-wrap .list .list-l .icon .img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
}
.cu-btn {
    background: darkgoldenrod;
}

.logout{
    margin-top: 40rpx;
}

.logout button{
    font-size: 30rpx;
}