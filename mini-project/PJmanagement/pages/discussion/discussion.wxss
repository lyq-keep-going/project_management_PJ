/* pages/discussion/discussion.wxss */
.outer{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding:50rpx 0rpx;
}   

.tab{
    margin: 20rpx 0rpx 20rpx -30rpx;
}

.tags{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    padding: 20rpx;
}



.tag{
    margin: 20rpx;
}

image{
    height: 50rpx;
    width: 50rpx;
}

.bottom_add{
    margin-top: 20rpx;
    margin-left: 20rpx;
    align-self: flex-start;
    height: 60rpx;
    width: 60rpx;
}

button{
    background-color: rgba(255,160,122);
    color: black;
    position: fixed;
    bottom: 40rpx;
    text-align: center;
    height: 70rpx;
}



.collect{
    display: inline;
    vertical-align: middle;
    margin-bottom: 50rpx;
}

.star{
    margin-right: 20rpx;
    vertical-align: middle;
}

.scroll_pages{
    display: flex;
    justify-content: center;
}

.scroll_pages image{
    margin-top: 20rpx;
}

.scroll_pages :first-child{
    margin-right: 200rpx;
}

.scroll_pages :last-child{
    margin-left: 200rpx;
}



.front_page{
    position: fixed;
    bottom: 40rpx;
    left: 50rpx;
    width: 100rpx;
    height: 100rpx;
}