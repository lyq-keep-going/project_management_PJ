<view class="container">
    <view class="search">
        <view class="searchItem">
            <image class="icon" src="{{search_img}}" display="inline"></image>
            <input display="inline" type="text" placeholder="搜索更多课程相关信息" confirm-type="search" value="{{inputValue}}" bindinput="inputBind" bindconfirm="query"></input>
        </view>
    </view>
    <image class="font_img" src="{{font_img}}"></image>
    <view class="course">
        <view class="headline">热门课程</view>
        <view class="parent">
            <block class="parent" wx:for-items="{{courses}}" wx:for-item="course">
            <view class="child">
                <image src="{{font_img}}"></image>
                <view class="course_title">{{course.title}}</view>
            </view>
            </block>
        </view>


    </view>
</view>