/* components/tag/tag.wxss */
.tag{
    background-color: #FFA07A;
    height: 50rpx;
    width: 100rpx;
    border-radius: 25rpx;
    text-align: center;
    line-height: 50rpx;
    vertical-align: middle;
    box-shadow: 3rpx 3rpx 6rpx #cccccc;
    color: white;
}

.tag_clicked{
    border-radius: 50rpx;
    height: 180rpx;
    width: 280rpx;
    box-shadow: 5rpx 5rpx 10rpx #cccccc;

}

.thumb_up{
    height: 60rpx;
    width: 60rpx;
    margin: 0rpx 20rpx 20rpx 50rpx;
}

.thumb_down{
    height: 60rpx;
    width: 60rpx;
    margin: 0rpx 20rpx 20rpx 40rpx;
}

.thumb_up_text{
    width: 60rpx;
    display: inline-block;
    margin: 0rpx 20rpx 20rpx 60rpx;
}

.thumb_down_text{
    width: 60rpx;
    display: inline-block;
    margin: 0rpx 20rpx 20rpx 50rpx;
}

.close{
    height: 30rpx;
    width: 30rpx;
    margin-left: 270rpx;
}
