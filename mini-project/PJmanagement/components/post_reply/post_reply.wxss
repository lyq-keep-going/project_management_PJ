/* components/post_reply/post_reply.wxss */
.portrait{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
    margin: 0rpx 20rpx 30rpx 10rpx;
}

.user_portrait{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: left;
    
}

.content{
    margin-left: 140rpx;
    margin-bottom: 20rpx;
}

.reply{
    text-align: center;
    vertical-align: middle;
    line-height: 50rpx;
    width: 100rpx;
    height: 50rpx;
    background-color: rgba(255,160,122,40%);
    border-radius: 20rpx;
    box-shadow: 3rpx 3rpx 6rpx #CCCCCC;
    display: inline-block;
}

.outer{
    padding: 20rpx 30rpx;
    box-shadow: 5rpx 0rpx 10rpx #CCCCCC;
    margin-bottom: 10rpx;
}

.date{
    color: #CCCCCC;
    width: 640rpx;
    padding-left: 10rpx;
}

.bottom{
    display: flex;
    align-items: center;
    flex-direction: row;
}

.reply_name{
    color: #006699;
}

.user_reply{
    background-color: rgba(220,220,220,50%);
    padding: 10rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 100rpx;
}

.user_reply .date{
    color: #A9A9A9;
}